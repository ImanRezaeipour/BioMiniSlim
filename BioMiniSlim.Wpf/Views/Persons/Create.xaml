        <telerik:RadImageEditor x:Name="FingerImage" Margin="101,111,492,227" ScaleFactor="0" >
            <telerik:RadImageEditor.Background>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFF2E2E2" Offset="1"/>
                    <GradientStop Color="#FF69C78B" Offset="0.415"/>
                    <GradientStop Color="#FF87AF93" Offset="0.483"/>
